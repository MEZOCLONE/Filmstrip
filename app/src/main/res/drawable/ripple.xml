<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          >
    <!--
We make the pressed and focused selector items transparent so the ListView's own selector states show through.
-->
	<item>
            <shape android:shape="oval">
                <solid android:color="#02bbd4" />
            </shape>
    </item>
        
    <item android:state_pressed="true" android:drawable="@drawable/selected"/>


</selector>